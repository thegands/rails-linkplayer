<h1>Comment for <%= link_to "#{@comment.playlist.title}", @comment.playlist %></h1>
<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>User</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%= format_time(@comment.created_at) %></td>
      <td><%= @comment.user.email %></td>
      <td><%= @comment.text %></td>
      <td><%= link_to 'Edit', edit_playlist_comment_path(@comment.playlist, @comment) %></td>
      <td><%= link_to 'Destroy', [@comment.playlist, @comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  </tbody>
</table>
